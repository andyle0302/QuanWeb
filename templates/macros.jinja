{% macro render_errors(field) %}
{% if field.errors %}
<ul class="errors">
    {% for error in field.errors %}
    <li>{{ error }}</li>
    {% endfor %}
</ul>
{% endif %}
{% endmacro %}

{% macro render_form(form, action=".", method="POST", multipart=False) %}
<form method="{{ method }}" action="{{ action }}" {% if multipart %} enctype="multipart/form-data"{% endif %}>
    {% if form.errors %}
    <p class="error">Your form contains errors.</p>
    {% endif %}
    {{ caller() }}
</form>
{% endmacro %}


{% macro render_field(field) %}
{{ render_errors(field) }}
<p class="field {% if field.errors %} error{% endif %}">
        {{ caller() }}
    </p>
{% endmacro %}


{% macro render_label(field, breakafter=True) %}
{{ field.label(*varargs, **kwargs) }}{% if field.flags.required %}*{% endif %}
{% if breakafter %}<br>{% endif %}
{% endmacro %}

{% macro render_pagination(pagination, endpoint, cat_slug=None) %}
  <ul class='pagination'>
    <li class="{{ pagination.has_prev|yesno('', 'disabled') }}">
      <a href="{{ url_for(endpoint) }}">&laquo;</a>
    </li>
    {%- for page in pagination.iter_pages() %}
      {% if page %}
        <li class="{{ pagination.page|compare_flip(page, 'active') }}">
          {% if not cat_slug %}
            <a href="{{ url_for(endpoint)|add_urlparam('page', page) }}">{{ page }}</a>
          {% else %}
            <a href="{{ url_for(endpoint, catslug=cat_slug)|add_urlparam('page', page) }}">{{ page }}</a>
          {% endif %}
        </li>
      {% else %}
        <li>
          <span class='ellipsis'>â€¦</span>
        </li>
      {% endif %}
    {%- endfor %}
    <li class="{{ pagination.has_next|yesno('', 'disabled') }}">
      <a href="{{ url_for(endpoint)|add_urlparam('page', pagination.pages) }}">&raquo;</a>
    </li>
  </ul>
{% endmacro %}
